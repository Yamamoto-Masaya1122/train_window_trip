<div class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 flex items-center justify-center hidden" data-modal-target="modal" style="z-index: 1000;">
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700 p-5 w-full max-w-lg">
    <button class="btn btn-sm btn-circle btn-ghost" data-action="click->modal#close">✕</button>
    <div class="modal-content flex items-center justify-center flex-1 h-full mx-auto">      
      <div class="w-full max-w-lg">
        <div class="leading-loose">
          <%= form_with model: @user, url: profile_path, class: 'max-w-lg px-10 py-12 m-auto' do |f| %>
            <div class="text-center mb-4">
              <h1 class="text-2xl font-bold text-gray-800 dark:text-white">プロフィール編集</h1>
            </div>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="mb-4 flex-1">
              <div class="mb-3 flex items-center">
                <div class="avatar">
                  <div class="w-12 rounded-full mr-4">
                    <%= image_tag @user.avatar.url %>
                  </div>
                </div>
                <div>
                  <div class="pt-2 pb-2 text-sm">
                    <% f.label :avatar, class: 'input-label-with-helper-text' %>
                    <span class="sr-only">Choose profile photo</span>
                  </div>
                  <%= f.file_field :avatar, class: 'file-input file-input-bordered file-input-info file-input-sm w-full max-w-xs' %>
                  <%= f.hidden_field :avatar_cache %>
                </div>
              </div>
              <div class="mb-4 flex-1">
                <%= f.label :name, class: 'block text-sm font-medium mb-2 dark:text-white' %>
                <%= f.text_field :name, class: 'py-3 px-4 block w-full border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500' %>
              </div>
              <div class="mb-4 flex-1">
                <%= f.label :email, class: 'block text-sm font-medium mb-2 dark:text-white' %>
                <%= f.email_field :email, class: 'py-3 px-4 block w-full border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500' %>
              </div>
              <div class="flex items-center justify-center mt-8">
                <%= f.submit (t 'defaults.save_edit'), type: 'submit', class: 'cursor-pointer py-3 px-4 bg-blue-500 hover:bg-blue-600 text-white w-full rounded-md font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>