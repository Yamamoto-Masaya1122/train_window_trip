<% comment = local_assigns[:comment] %>
<div class="chat chat-end comment-own pr-6 pt-6" data-user-id="<%= comment.user_id %>">
  <div class="chat-image avatar">
    <div class="w-10 rounded-full">
      <%= image_tag comment.user.avatar.url %>
    </div>
  </div>
  <div class="chat-header">
    <%= comment.user.name %>
  </div>
  <div class="chat-bubble bg-green-400"><%= comment.body %></div>
  <div class="chat-footer opacity-50">
    <%= comment.created_at.strftime('%Y年%m月%d日 %H:%M') %>
  </div>
</div>