<div class="w-full max-w-lg mx-auto p-6 mt-16">
  <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 dark:text-white"><%= t '.title' %></h1>
      </div>
      <div class="mt-5">
        <%= form_with model: @user, class: 'grid gap-y-4', local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="block text-sm mb-2 dark:text-white">
            <%= f.label :name %>
          </div>
          <%= f.text_field :name, class: 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400' %>
          <div class="block text-sm mb-2 dark:text-white">
            <%= f.label :email %>
          </div>
          <%= f.email_field :email, class: 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400' %>
          <div class="block text-sm mb-2 dark:text-white">
            <%= f.label :password %>
          </div>
          <%= f.password_field :password, class: 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400' %>
          <div class="block text-sm mb-2 dark:text-white">
            <%= f.label :password_confirmation %>
          </div>
          <%= f.password_field :password_confirmation, class: 'py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400' %>
          <%= f.submit (t 'defaults.register'), type: 'submit', class: 'py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800' %>
        <% end %>
      </div>
    </div>
  </div>
</div>