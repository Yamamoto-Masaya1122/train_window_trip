<div class="flex flex-row flex-wrap justify-start">  
  <div class="card lg:card-side bg-base-100 shadow-xl m-4 bg-neutral-100">
    <figure><%= image_tag line.image %></figure>
    <div class="card-body">
      <h2 class="card-title link link-accent"><%= link_to line.name, line_path(line) %></h2>
      <ul class="list-inline">
        <li class="list-inline-item">
          <%= line.description %>
        </li>
      </ul>
    </div>
  </div>
</div>